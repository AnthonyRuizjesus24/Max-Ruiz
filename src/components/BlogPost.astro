---
const { title, url, image, description } = Astro.props;
---
<style>
  @import '../styles/global.css';

  .link-item {
    list-style-type: none;
    margin: 20px 0;
    display: flex;
    align-items: center;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 10px;
    transition: box-shadow 0.3s;
  }

  .link-item img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 10px;
    margin-right: 20px;
  }

  .link-item-content {
    display: flex;
    flex-direction: column;
  }

  .link-item-content a {
    text-decoration: none;
    color: #0070f3;
    font-weight: bold;
    padding: 10px;
    border: 1px solid #0070f3;
    border-radius: 5px;
    transition: background-color 0.3s, color 0.3s;
    margin-bottom: 10px;
  }

  .link-item-content a:hover {
    background-color: #0070f3;
    color: #fff;
  }

  .description {
    color: #666;
    font-size: 0.9rem;
  }

  .link-item:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
</style>

<li class="link-item">
  <img src={image} alt={title} />
  <div class="link-item-content">
    <a href={url}>{title}</a>
    <p class="description">{description}</p>
  </div>
</li>
